<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <title>Login and Registration</title>
    </head>
    <body class="bg-dark">
        <div class="container">
            <div class="row justify-content-center py-5">
                <div class="col-6 border border-light rounded pb-4">
                    <div class="row justify-content-center py-3">
                        <h3 class="text-light">Login</h3>
                    </div>
                    <form action="/users/login" method="POST">
                        <div class="row justify-content-center px-4 pb-2">
                            <div class="col-12">
                            <% if (messages.loginErrors) { %>
                                <% for (var x of messages.loginErrors) { %>
                                    <p class="text-danger text-center"><%= x %></p>
                                <% } %>
                            <% } %>
                            </div>
                            <div class="col-10">
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="email" class="text-white">Email</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="text" name="email" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="password" class="text-white">Password</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="password" name="password" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-end pr-3">
                                    <button type="submit" class="btn btn-dark border border-light">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-center py-3">
                        <h3 class="text-light">Registration</h3>
                    </div>
                    <form action="/users" method="POST">
                        <div class="row justify-content-center px-4 pb-2">
                            <div class="col-12">
                            <% if (messages.registrationErrors) { %>
                                <% for (var x of messages.registrationErrors) { %>
                                    <p class="text-danger text-center"><%= x %></p>
                                <% } %>
                            <% } %>
                            </div>
                            <div class="col-10">
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="email" class="text-white">Email</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="text" name="email" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="password" class="text-white">Password</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="password" name="password" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="first_name" class="text-white">First Name</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="text" name="first_name" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="last_name" class="text-white">Last Name</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="text" name="last_name" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-start mb-1">
                                    <div class="col-4">
                                        <label for="birthday" class="text-white">Last Name</label>
                                    </div>
                                    <div class="col-8">
                                        <input type="date" name="birthday" class="w-100 text-light rounded bg-dark" />
                                    </div>
                                </div>
                                <div class="row justify-content-end pr-3">
                                    <button type="submit" class="btn btn-dark border border-light">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>